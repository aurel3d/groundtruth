{
  "name": "@groundtruth/shared",
  "version": "0.1.0",
  "private": true,
  "description": "Shared types, schemas, and constants for groundtruth",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsc && tsc -p tsconfig.cjs.json && node scripts/post-build.cjs",
    "dev": "tsc --watch",
    "test": "vitest run --passWithNoTests",
    "lint": "eslint src --ext .ts",
    "clean": "rm -rf dist dist-cjs"
  },
  "dependencies": {
    "libphonenumber-js": "^1.12.34",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "@vitest/coverage-v8": "^2.1.0",
    "@vitest/ui": "^2.1.0",
    "eslint": "^8.56.0",
    "typescript": "^5.3.3",
    "vitest": "^2.1.0"
  }
}
